    $level = substr_count($key,'links');
    $temp = explode(".", $key);
    $nr = $temp[0];
    $order = '';

    //echo $key."<br />";
    if (strpos($key, 'id') !== false) {

      foreach($temp as $t){
        if($t != 'links' && $t != 'id' && $t != 'data'):
          $order .= $t."|";
        endif;
      }
