  endif;

  while(strlen($key) >= 4){
    $key = substr($key, 0, -2);
    $id = $flat[$key];
    $crumbs = get_title($id,$view).'</span>
      <span itemscope="" itemtype="https://data-vocabulary.org/Breadcrumb" class="breadcrumb__scope">'.$crumbs;

  }
