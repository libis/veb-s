                >
              </div>
              <header class="card-header">
                <p class="card-header-title title is-5 is-family-secondary">
                    <a href="<?php echo $block->dataValue('link'.$i);?>"><?php echo $block->dataValue('title'.$i);?></a>
                </p>
              </header>
              <div class="card-content">
                <div class="content">
                  <?php echo $block->dataValue('text'.$i);?>
                </div>
              </div>
              <?php if($block->dataValue('link'.$i) && $block->dataValue('linktext'.$i)):?>
              <footer class="card-footer">
                <a class="card-footer-item" href="<?php echo $block->dataValue('link'.$i);?>">
                  <?php echo $block->dataValue('linktext'.$i);?></a>
                </footer>
              <?php endif;?>
            </a>
          </div>
        </div>
      <?php } ?>
